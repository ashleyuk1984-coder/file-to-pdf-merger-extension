{
  "manifest_version": 3,
  "name": "File to PDF Merger",
  "version": "1.0.0",
  "description": "Transform your files into beautiful PDFs with drag-and-drop magic. Merge documents, images, emails, and text files into professional PDFs.",
  
  "permissions": [
    "storage",
    "downloads"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "File to PDF Merger",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon-128.svg"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}